{
    "name": "pglu/tourism-cpanel",
    "description": "Administration component of the PGLU Tourism Web Application",
    "license": "UNLICENSED",
    "authors": [
        {
            "name": "Ardee Joy Ocampo",
            "email": "ajocampo@lorma.edu"
        }
    ],
    "require": {
        "php": ">=5.6",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "slim/flash": "^0.4.0",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "gov\\pglu\\tourism\\dao\\": "src/data/",
            "gov\\pglu\\tourism\\util\\": "src/utils/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
